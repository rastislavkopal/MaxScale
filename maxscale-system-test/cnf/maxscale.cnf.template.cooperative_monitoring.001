[maxscale]
threads=###threads###

[MariaDB-Monitor2A]
type=monitor
module=mariadbmon
servers=server1A,server2A,server3A,server4A
user=maxskysql
password=skysql
monitor_interval=1000
auto_failover=true
auto_rejoin=true
failcount=2
cluster_manipulation_require_locks=majority_of_running

[MariaDB-Monitor2B]
type=monitor
module=mariadbmon
servers=server1B,server2B,server3B,server4B
user=maxskysql
password=skysql
monitor_interval=1000
auto_failover=true
auto_rejoin=true
failcount=2
cluster_manipulation_require_locks=majority_of_all

[RW-Split-Router]
type=service
router=readwritesplit
servers=server1A,server2A,server3A,server4A
user=maxskysql
password=skysql
slave_selection_criteria=LEAST_GLOBAL_CONNECTIONS
max_slave_connections=1

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=MySQLClient
port=4006

[server1A]
type=server
address=###node_server_IP_1###
port=###node_server_port_1###

[server2A]
type=server
address=###node_server_IP_2###
port=###node_server_port_2###

[server3A]
type=server
address=###node_server_IP_3###
port=###node_server_port_3###

[server4A]
type=server
address=###node_server_IP_4###
port=###node_server_port_4###

[server1B]
type=server
address=###node_server_IP_1###
port=###node_server_port_1###

[server2B]
type=server
address=###node_server_IP_2###
port=###node_server_port_2###

[server3B]
type=server
address=###node_server_IP_3###
port=###node_server_port_3###

[server4B]
type=server
address=###node_server_IP_4###
port=###node_server_port_4###
